{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Commentaires{% endblock %}

{% block body %}
    <div class="container">
        <h2 class="text-center">{{ thread.title }}</h2>
        <p class="text-center">{{ thread.message }}</p>
        <div class="row">

            <div class="col-12 right-header-contentChat">
                <ul>
                    {% for comments in comment %}
                        {% if comments.id % 2 == 1 and comments.users.status == 'ROLE_USER' %}

                            <li>
                                <div class="rightside-left-chat">
                                    <span><i class="fa fa-circle" aria-hidden="true"></i> {{ comments.users.nickname }} <small> Publié le :  {{ comments.publicationDate|date("d/m/Y") }} </small> </span><br><br>
                                    <p>{{ comments.content|nl2br }}</p>
                                </div>
                            </li>
                        {% elseif comments.id % 2 == 0 and comments.users.status == 'ROLE_USER' %}
                            <li>
                                <div class="rightside-right-chat">
                            <span> <small> Publié le :  {{ comments.publicationDate|date("d/m/Y") }} </small> {{ comments.users.nickname }} <i
                                        class="fa fa-circle"
                                        aria-hidden="true"></i></span><br><br>
                                    <p>{{ comments.content|nl2br }}</p>
                                </div>
                            </li>
                        {% elseif comments.id % 2 == 0 and comments.users.status == 'ROLE_ADMIN' %}
                            <li>
                                <div class="rightside-right-chat">
                            <span> <small> Publié le :  {{ comments.publicationDate|date("d/m/Y") }} </small> {{ comments.users.nickname }} <i
                                        class="fa fa-circle"
                                        aria-hidden="true"></i></span><br><br>
                                    <p style="background-color: rgba(255,0,22,0.49);"><i class="fas fa-exclamation-triangle"></i> MODERATION : <br>{{ comments.content|nl2br }}</p>
                                </div>
                            </li>
                        {% elseif comments.id % 2 == 1 and comments.users.status == 'ROLE_ADMIN' %}
                            <li>
                                <div class="rightside-left-chat">
                                    <span><i class="fa fa-circle" aria-hidden="true"></i> {{ comments.users.nickname }} <small> Publié le :  {{ comments.publicationDate|date("d/m/Y") }} </small> </span><br><br>
                                    <p style="background-color: rgba(255,0,22,0.49);"><i class="fas fa-exclamation-triangle"></i> MODERATION : <br>{{ comments.content|nl2br }}</p>
                                </div>
                            </li>
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
        </div>
        {% if app.user is not null %}
        {{ form_start(formDepotMessage) }}

        {{ form_row(formDepotMessage.content)}}


        <div class="col-12 mx-auto">
            <button type="submit" class="btn btn-primary w-100">
                Soumettre
            </button>
        </div>
    </div>
</div>
{{ form_end(formDepotMessage) }}
    {% else %}
    <h5><a href="{{ path('app_registrationlog_connexion') }}">Connectez-vous</a> ou <a href="{{ path('app_registrationlog_register') }}">Inscrivez-vous</a> pour participer à la discussion.</h5>
    {% endif %}

{% endblock %}
