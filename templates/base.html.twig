{% block error %}
    {# affichage des messages flash #}
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            {# pour la classe alert-danger de bootstrap #}
            {% if (type == 'error') %}
                {% set type ='danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2 text-center">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

