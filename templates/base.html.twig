<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue sur Tokepi !{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/css/style.css') }}">
    {% endblock %}
</head>
<body>
{% if app.user is null %}
    <a href="{{ path('app_registrationlog_register') }}">Inscription</a>
    <a href="{{ path('app_registrationlog_connexion') }}">Connexion</a>
{% else %}
    <a href="{{ path('app_registrationlog_logout') }}">Deconnexion</a>
{% endif %}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><img class="logo" src="{{ asset('img/tokepi_logo_blanc.png') }}" alt=""></a>
        <div class="navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Gestion m√©dicaments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Gestion membres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Gestion messages
                    </a>
                </li>
                {% if app.user is null %}
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_register') }}" class="nav-link">Inscription</a>
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_connexion') }}" class="nav-link">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_logout') }}" class="nav-link">Deconnexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>
{# affichage des messages flash #}
{% for type, messages in app.session.flashbag.all %}
    {% for message in messages %}
        {# pour la classe alert-danger de bootstrap #}
        {% if (type == 'error') %}
            {% set type ='danger' %}
        {% endif %}
        <div class="alert alert-{{ type }} mt-2">
            {{ message|raw }}
        </div>
    {% endfor %}
{% endfor %}
{% block body %}{% endblock %}
{% block javascripts %}
    <!-- JAVASCRIPT -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>
{% endblock %}
</body>
</html>
