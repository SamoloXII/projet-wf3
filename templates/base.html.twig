<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Bienvenue sur Tokepi !{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('lib/bootstrap/bootstrap.min.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/css/style.css') }}">
        <link rel="stylesheet" href="{{ asset('lib/css/modal.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    {% endblock %}
</head>
<body>
<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""><img class="logo" src="{{ asset('img/tokepi_logo_blanc.png') }}" alt=""></a>
        <div class="navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_admin_affichagemed_index') }}">
                        Gestion m√©dicaments
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">
                        Gestion membres
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('app_depotmessage_index') }}" >
                        Gestion messages
                    </a>
                </li>
                {% if app.user is null %}
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_register') }}" class="nav-link">Inscription</a>
                        {#                        <a href="{{ path('app_registrationlog_register') }}" data-toggle="modal" data-target="#sem-reg">Inscription</a>#}
                    </li>
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_connexion') }}" class="nav-link">Connexion</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                        <a href="{{ path('app_registrationlog_logout') }}" class="nav-link">Deconnexion</a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>

{% block error %}
    {# affichage des messages flash #}
    {% for type, messages in app.session.flashbag.all %}
        {% for message in messages %}
            {# pour la classe alert-danger de bootstrap #}
            {% if (type == 'error') %}
                {% set type ='danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2 text-center">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}
{% endblock %}

    {% block body %}{% endblock %}
{% block javascripts %}
    <!-- JAVASCRIPT -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
            integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
            integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
            crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
            integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
            crossorigin="anonymous"></script>
    <script src="{{ asset('lib/bootstrap/bootstrap.min.js') }}"></script>
{% endblock %}


</body>
</html>
