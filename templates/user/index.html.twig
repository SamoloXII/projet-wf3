{% extends 'base.html.twig' %}

{% block body %}

    <div class="row mt-5 pt-4 ml-0 mr-0">

        <div class="col-md-2 col-sm-6 mt-5">
            <div class="card border-success mb-3">
                <div class="card-header bg-transparent border-success">Mes médicaments</div>
                <!-- Si vide, écrire : Vous n'avez actuellement aucun message à) afficher -->
                <div class="card-body text-success p-0">
                    {% for medoc in medocs %}
                        <a href="{{ path('app_medicpage_index',{'id': medoc.id}) }}">
                        <div class="card">
                            <div class="card-body">
                                {{ medoc.nom }}
                            </div>
                        </div>
                        </a>
                    {% endfor %}
                </div>
            </div>
        </div>
        <div class="container">
            <div class="col-md-12 col-sm-6 mt-5">
                <div class="card mb-5 mt-0 infos-user-main bg-success user-card c1">
                    <a href="{{ path('app_user_profil') }}" class="btn">
                        <i class="fas fa-user icard"></i>
                        <div class="card-body infos-user-main-body">

                            <h5 class="card-title text-white">Mes informations</h5>
                        </div>
                    </a>
                </div>


                <div class="d-flex justify-content-between">
                    <div class="card card col-5 mb-5 mt-0 liste-medic-main bg-warning user-card c2">
                        <i class="fas fa-comment-dots icard"></i>
                        <div class="card-body">
                            <h5 class="card-title">Mes sujets de discussion</h5>
                        </div>
                    </div>
                    <div class="card card col-5 mb-5 mt-0 calendrier-main bg-danger user-card c3">
                        <i class="fas fa-calendar-alt icard"></i>
                        <div class="card-body">
                            <h5 class="card-title">Mon calendrier</h5>
                        </div>
                    </div>
                </div>


                <div class="card card mb-5 mt-0 ordonnance-main bg-primary user-card c4">
                    <i class="fas fa-file-medical icard"></i>
                    <div class="card-body">
                        <h5 class="card-title">Mes ordonnances</h5>
                    </div>
                </div>
                {% for prescription in prescriptions %}
                    <p>{{ prescription.id }} {{ prescription.frequency }} {{ prescription.registrationDate|date('d/m/Y') }} {{ prescription.medicaments.nom }}</p>
                {% endfor %}

            </div>
        </div>

        <div class="col-md-2 col-sm-6 mt-5 ">
            <div class="card border-success mb-3">
                <div class="card-header  border-success text-center bg-dark text-light">Mes messages récents</div>
                <!-- Si vide, écrire : Vous n'avez actuellement aucun message à) afficher -->
                <div class="card-body text-success overflow-auto msg-recents">
                    {% for messages in message %}
                        <a href="{{ path('app_comment_index', {'id': messages.thread.id}) }}">
                            <h5 class="card-title">Dans : {{ messages.thread.title }}</h5>
                            <h5 class="card-title">Le : {{ messages.publicationDate|date('d/m/Y') }}
                                à {{ messages.publicationDate|date('H:i') }}</h5>
                            <p class="card-text">{{ messages.content }}
                            <hr>
                        </a>
                    {% endfor %}

                </div>
            </div>
        </div>
    </div>
{% endblock %}
