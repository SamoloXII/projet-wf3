{% extends 'base.html.twig' %}

{% block body %}
    <div class="container bootstrap snippet">
        <div class="row">
            <div class="col-sm-10"><h1>{{ user.nickname }}</h1></div>

        </div>

        <div class="row">

            <div class="col-sm-3"><!--left col-->
                <div class="text-center">

                    {{ form_row(form.image) }}
                    {% if original_image is not null %}
                        <p>
                        <img src="{{ asset('img/profil/' ~ original_image) }}" alt="avatar" height="200px"
                        class="avatar img-circle img-thumbnail">
                        </p>
                    {% endif %}
                </div>

                <p><small>Inscrit depuis le : {{ user.registrationDate|date('d/m/Y') }}</small></p>
                </hr><br>
            </div><!--/col-3-->

            <div class="col-sm-9">
                <ul class="nav nav-tabs">
                    <li class="active"><a data-toggle="tab" href="#">Profil</a></li>
                </ul>

                <hr>
                    {{ form_start(form) }}
                    <div class="col-xs-9">
                        {{ form_row(form.firstname) }}
                        {{ form_row(form.lastname) }}
                        {{ form_row(form.nickname) }}
                        {{ form_row(form.email) }}
                    </div>


                <div class="col-6 mx-auto">
                    <button type="submit" class="btn btn-primary w-100">
                        Enregistrer
                    </button>

                </div>
                {{ form_end(form) }}
            </div><!--/tab-content-->

        </div><!--/col-9-->
    </div><!--/row-->
{% endblock %}
{% block javascripts %}
    {{ parent() }}

    <script src="https://cdn.jsdelivr.net/npm/bs-custom-file-input/dist/bs-custom-file-input.min.js"></script>
    <script>
        // affichage du fichier dans le champ du formulaire
        $(document).ready(function () {
            bsCustomFileInput.init();
        })
    </script>
{% endblock %}