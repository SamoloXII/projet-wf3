{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Liste médicaments{% endblock %}

{% block body %}
    <h1 class="text-center">La liste des médicaments</h1>

    <div class="container">
        <div class="row">
            <div class="col-12 pr-0 mb-2 text-right">
                <a href="{{ path('app_admin_ajoutmedicament_index') }}"
                   class="btn btn-primary w-25">
                    Ajouter un médicament
                </a>
            </div>
            <table class="table table-striped table-dark">
                <tr>
                    <th class="align-middle">Id</th>
                    <th class="text-center align-middle">Nom</th>
                    <th class="text-center align-middle">Image</th>
                    <th class="align-middle">Type</th>
                    <th class="align-middle">Prix</th>
                    <th class="text-center align-middle">Taux de<br>remboursement (%)</th>
                    <th></th>
                    <th></th>
                    <th></th>
                </tr>
                {% for medicament in medicaments %}
                    <tr>
                        <td class="align-middle">{{ medicament.id }}</td>
                        <td class="align-middle text-center">{{ medicament.nom|capitalize }}</td>

                        {% if medicament.image is not null %}
                            <td class="text-center"><img src="{{ asset('img/med/' ~ medicament.image) }}"  alt="{{ medicament.nom }}"
                                style="max-width: 100px; height: 100px;" class="img-thumbnail"></td>
                        {% else %}
                            <td></td>
                        {% endif %}

                        <td class="align-middle">{{ medicament.type }}</td>
                        <td class="align-middle">{{ medicament.prix }}€</td>
                        <td class="align-middle text-center">{{ medicament.tauxRemboursement }}%</td>
                        <td class="align-middle">
                            <a href="{{ path('app_admin_affichagemed_details', {"id": medicament.id}) }}"
                                class="btn btn-secondary">
                                Voir détails
                            </a>
                        </td>
                        <td class="align-middle">
                            <a href="{{ path('app_admin_affichagemed_edit', {"id": medicament.id}) }}"
                               class="btn btn-primary">
                                Modifier
                            </a>
                        </td>
                        <td class="align-middle">
                            <a href="{{ path('app_admin_affichagemed_delete', {"id": medicament.id}) }}"
                               class="btn btn-danger">
                                Supprimer
                            </a>
                        </td>

                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>
{% endblock %}

