{% extends 'base.html.twig' %}

{% block body %}

    <div class="container">

        <h1 class="text-center">Gestions utilisateurs</h1>
        <hr>

        <table class="table table-striped table-dark">
            <tr>
                <th class="text-center">id</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Prénom</th>
                <th class="text-center">Pseudo</th>
                <th class="text-center">Email</th>
                <th class="text-center">Statut</th>
                <th class="text-center">Date d'enregistrement</th>
                <th></th>
                <th></th>
            </tr>
            {% for user in users %}
                <tr>
                    <td class="text-center">{{ user.id }}</td>
                    <td class="text-center">{{ user.lastname }}</td>
                    <td class="text-center">{{ user.firstname }}</td>
                    <td class="text-center">{{ user.nickname }}</td>
                    <td class="text-center">{{ user.email }}</td>
                    <td class="text-center">{{ user.status }}</td>
                    <td class="text-center">{{ user.registrationDate|date('d/m/Y à H:s') }}</td>
                    <td><a href="{{ path('app_admin_users_edit', {"id": user.id}) }}" class="btn btn-primary">Modifier</a></td>
                    <td><a href="{{ path('app_admin_users_delete', {"id": user.id}) }}" class="btn btn-danger">Supprimer</a></td>

                </tr>
            {% endfor %}
        </table>

    </div>

{% endblock %}