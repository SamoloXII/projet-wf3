{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Gestion messages{% endblock %}

{% block body %}
    <h1 class="text-center text-light">Gestion Message</h1>
    <div class="container ">
        <div class="row">
            <table class="table table-striped table-dark">
                <tr>
                    <th class="align-middle">ID</th>
                    <th class="text-center align-middle">Sujet</th>
                    <th class="text-center align-middle">Commentaire</th>
                </tr>

                {% for comment in comments %}
                    <tr>
                        <td class="align-middle">{{ comment.id }}</td>
                        <td class="align-middle text-center">{{ comment.thread.title }}</td>
                        <td class="text-center align-middle text-center">{{ comment.content }}</td>
                        <td class="align-middle">
                            <a href="{{ path('app_admin_gestionmessage_delete', {"id": comment.id}) }}"
                               class="btn btn-danger">
                                Supprimer
                            </a>
                        </td>
                    </tr>

                {% endfor %}
            </table>
        </div>
    </div>

{% endblock %}

